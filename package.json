{
  "name": "easydox",
  "version": "1.0.0",
  "description": "Easydox - Automate your JavaScript/TypeScript project documentation with ease.",
  "main": "dist/index.js",
  "bin": {
    "easydox": "./dist/bin/cli.js"
  },
  "keywords": [
    "documentation",
    "cli",
    "typescript",
    "javascript",
    "generator",
    "docs",
    "automation"
  ],
  "author": "Vikram Samak",
  "license": "MIT",
  "type": "commonjs",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vikramsamak/easydox.git"
  },
  "bugs": {
    "url": "https://github.com/vikramsamak/easydox/issues"
  },
  "homepage": "https://github.com/vikramsamak/easydox#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "inject-envs": "node inject-env.js",
    "compile": "tsc",
    "obfuscate": "javascript-obfuscator dist --output dist --compact true --control-flow-flattening true --self-defending true",
    "build": "npm run clean && npm run compile && npm run inject-envs && npm run obfuscate",
    "start": "node dist/bin/cli.js ",
    "prestart": "npm run build",
    "prepublishOnly": "npm run build",
    "dev-interactive": "npx ts-node src/bin/cli.ts",
    "dev-args": "npx ts-node src/bin/cli.ts -s example/ -f md,json,mdx -o example-docs",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@babel/parser": "^7.26.9",
    "@babel/traverse": "^7.26.9",
    "@babel/types": "^7.26.9",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "doctrine": "^3.0.0",
    "dotenv": "^16.4.7",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.4.2",
    "markdown-table": "^3.0.4",
    "openai": "^4.87.3",
    "prettier": "^3.5.3",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-lint": "^10.0.1",
    "remark-lint-heading-increment": "^4.0.1",
    "remark-normalize-headings": "^4.0.0",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-markdown-style-guide": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "remark-stringify": "^11.0.0"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.6.8",
    "@types/babel__traverse": "^7.20.6",
    "@types/doctrine": "^0.0.9",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.9",
    "javascript-obfuscator": "^4.1.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
